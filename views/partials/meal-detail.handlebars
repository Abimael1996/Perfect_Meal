<div class="modal fade"
     id="modalMeal"
     tabindex="-1"
     role="dialog"
     aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog"
         role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Meal Information</h4>
                <button type="button"
                        class="close"
                        data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div class="md-form mb-5">
                    <i class="fa fa-cutlery prefix grey-text"></i>
                    <label data-error="wrong"
                           data-success="right"
                           for="food-title">Food name</label>
                    <input type="text"
                           id="food-title"
                           class="form-control">
                    <br>
                    <div class="row">
                        <div class="col-4 list-container">
                            <label data-error="wrong"
                                   data-success="right">Ingredients</label>
                            <div class="card">
                                <ul class="list-group">
                                    {{#each ingredients as |ingredient|}}
                                        {{!-- {{}} --}}
                                    {{/each}}
                                </ul>
                            </div>
                        </div>
                        <div class="col-8">
                            <label data-error="wrong"
                                   data-success="right"
                                   for="ingredient">Ingredient</label>
                            <input type="text"
                                   id="ingredient"
                                   class="form-control">
                            <div class="d-flex justify-content-right">
                                <button class="btn btn-success btn-sm add-ingredient" disabled>Add</button>
                            </div>
                            <div class="d-flex justify-content-right">
                                <button class="btn btn-info btn-sm update-ingredient invisible">Update</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button class="btn btn-primary create-meal" disabled>Create Meal</button>
            </div>
        </div>
    </div>
</div>
