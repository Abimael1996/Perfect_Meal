<div class="modal fade"
     id="modalMeal"
     tabindex="-1"
     role="dialog"
     aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog"
         role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Meal Information</h4>
                <button type="button"
                        class="close"
                        data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div class="md-form mb-5">
                    <i class="fa fa-cutlery prefix grey-text"></i>
                    <label data-error="wrong"
                           data-success="right"
                           for="defaultForm-email">Food name</label>
                    <input type="text"
                           id="defaultForm-email"
                           class="form-control">
                </div>
                <div class="md-form mb-5">
                    <label data-error="wrong"
                           data-success="right"
                           for="defaultForm-email">Ingredient</label>
                    <input type="text"
                           id="defaultForm-email"
                           class="form-control">
                </div>

                <div class="d-flex justify-content-center">
                    <button class="btn btn-success">Add</button>
                </div>

            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button class="btn btn-primary">Create Meal</button>
            </div>
        </div>
    </div>
</div>
