<div class="modal fade"
     id="modalMeal"
     tabindex="-1"
     aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog"
         role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Meal Information</h4>
                <button type="button"
                        class="close"
                        data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div class="md-form mb-5 title-section">
                    <i class="fa fa-cutlery prefix grey-text"></i>
                    <label data-error="wrong"
                           data-success="right"
                           id="foodLabel"
                           for="food-title">Food name</label>
                    <input type="text"
                           id="food-title"
                           class="form-control">
                </div>
                <div class="form-group note-section">
                    <i class="far fa-edit prefix grey-text"></i>
                    <label for="notes" id="notesLabel">Notes</label>
                    <textarea class="form-control"
                              id="notes"
                              rows="3"></textarea>
                </div>
            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button class="btn btn-primary modalBtnCreate" id="create-meal" data-dismiss="modal" disabled>Create Meal</button>
                <button class="btn btn-primary modalBtnUpdate" id="update-meal" data-dismiss="modal">Update Meal</button>
            </div>
        </div>
    </div>
</div>
