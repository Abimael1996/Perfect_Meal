<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="/css/adminsview.css">
<header>
    <h1>{{first_name}} {{last_name}}</h1>
</header>

<main>

    <section id="topSection">
        <div class="card text-white mb-3">
            <div class="card-header">
                <h5 class="card-title">Customer Info</h5>
            </div>
            <div class="card-body">
                <div class="card">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Age: {{age}}</li>
                        <li class="list-group-item">Gender: {{sex}}</li>
                        <li class="list-group-item">Height: {{height}} ft</li>
                        <li class="list-group-item">Weight: <span id="current-weight">{{weight}}</span>lb</li>
                        <li class="list-group-item">Maintenance Calories: <span id="maintenance-cal">2780</span></li>

                    </ul>
                </div>

            </div>
        </div>
        <div class="card text-white goalCard mb-3">
            <div class="card-header">
                <h5 class="card-title">Goals</h5>
            </div>
            <div class="card-body">
                <div class="card goalCard">
                    <h5 class="card-title">{{goal}} Weight</h5>
                    <h5 class="card-title">Weight by the end of the week</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item goal" id="goal" data-goal="gain">169.5 lb</li>
                    </ul>
                    <h5 class="card-title">Macros for today</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item goal">Protein: <span id="protein-goal"></span>gr</li>
                        <li class="list-group-item goal">Carbs: <span id="carbs-goal"></span>gr</li>
                        <li class="list-group-item goal">Fat: <span id="fat-goal"></span>gr</li>
                        <li class="list-group-item goal">Food Energy: <span id="food-energy-goal"></span>cal</li>
                    </ul>
                </div>

            </div>
        </div>

    </section>
        <h2>Nutrition Plan</h2>
    <section id="nutritionPlan">
        <button type="button" class="btn btn-primary btn-lg">Create a Nutrition Plan</button>
    </section>
</main>
<script src="/js/getMacros.js"></script>