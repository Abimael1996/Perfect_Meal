<link id="favicon"
      rel="icon"
      href="https://www.nexmo.com/favicon.ico"
      type="image/x-icon">

<body>
    <header>
        <h1><a href="/">2FA with Verify API</a></h1>
        <div class="logo">
            <img src="https://www.nexmo.com/static/images/hashed/7b7160e909a114d12f447ff8ef63680f.png"
                 alt="Nexmo">
        </div>
    </header>
    <main>
        {{#if status}}
        <form method="post"
              action="/">
            <p>Something went wrong… <span class="kaomoji">ಠ_ಠ</span></p>
            <p>Please contact the administrator for more information.</p>
            <button>Try Again</button>
        </form>
        {{!-- <p>Code verified successfully. <span class="kaomoji">ヾ(＾ᴗ＾)ノ</span></p> --}}
        {{else}}
        {{!-- <p>Something went wrong… <span class="kaomoji">ಠ_ಠ</span></p>
        <p>Please contact the administrator for more information.</p> --}}
        <form method="post"
              action="adminpage">
            <p>Code verified successfully. <span class="kaomoji">ヾ(＾ᴗ＾)ノ</span></p>
            <button>Welcome</button>
        </form>
        {{/endif}}
    </main>
    <footer>
        <p><small>Built with Nexmo's <a href="https://developer.nexmo.com/verify/overview">Verify API</a>.</small></p>
    </footer>
</body>
<script src="/js/twoFactor.js"></script>