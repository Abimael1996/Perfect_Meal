<link id="favicon" rel="icon" href="https://www.nexmo.com/favicon.ico" type="image/x-icon">

<body>
    <header>
        <h1><a href="/">2FA with Verify API</a></h1>
        <div class="logo">
            <img src="https://www.nexmo.com/static/images/hashed/7b7160e909a114d12f447ff8ef63680f.png"
                 alt="Nexmo">
        </div>
    </header>
    <main>
        <form method="post"
              action="check">
            <input name="pin"
                   placeholder="Enter PIN">
            <input name="reqId"
                   type="hidden"
                   value="{{ reqId }}">
            <button>Verify</button>
        </form>
        <form method="post"
              action="cancel">
            <input name="reqId"
                   type="hidden"
                   value="{{ reqId }}">
            <button class="inline">Cancel verification</button>
        </form>
    </main>
    <footer>
        <p><small>Built with Nexmo's <a href="https://developer.nexmo.com/verify/overview">Verify API</a>.</small></p>
    </footer>
</body>
<script src="/js/twoFactor.js"></script>