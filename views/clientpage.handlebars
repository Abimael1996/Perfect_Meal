      <a class="btn btn-primary iterateBtn" href="/client/{{next clients id}}" role="button" id="next">{{nextName clients id}}
        ></a>
      {{else}}
      <h1 class="clientName" id="idHolder" data-client-id="{{id}}">{{first_name}} {{last_name}}</h1>
      {{/if}}
</header>
<main>
