<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="/css/adminsview.css">
<header>
    <a class="btn btn-primary" href="/client/{{before clients id}}" role="button" id="before">< {{prevName clients id}}</a>
    <h1>{{first_name}} {{last_name}}</h1>
    <a class="btn btn-primary" href="/client/{{next clients id}}" role="button" id="next">{{nextName clients id}} ></a>
</header>

<main>
    <section id="topSection">
        <div class="card text-black mb-3">
            <div class="card-header">
                <h5 class="card-title">Client Info</h5>
                        <button
    type="button"
    class="btn btn-primary new-button"
    data-bs-toggle="modal"
    data-bs-target="#exampleModal"
  >
    Update
  </button>
            </div>
            <div class="card-body">
                <div class="card">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><div class="info"><span>Age:</span><span id="age">{{age}}</span></div></li>
                        <li class="list-group-item"><div class="info"><span>Sex:</span><span id="sex">{{sex}}</span></div></li>
                        <li class="list-group-item"><div class="info"><span>Height:</span><span><span id="current-height">{{height}}</span><span> ft</span></span></div></li>
                        <li class="list-group-item"><div class="info"><span>Weight:</span><span><span id="current-weight">{{weight}}</span><span> lb</span></span></div></li>
                        <li class="list-group-item"><div class="info"><span>Activity:</span><span><span id="activity">{{activity}}</span></span></div></li>
                        <li class="list-group-item"><div class="info"><span>TDDE</span><span><span id="tdde"></span><span> cal</span></span></div></li>

                    </ul>
                </div>

            </div>
        </div>
        <div class="card text-black goalCard mb-3">
            <div class="card-header">
                <div class="info"><h5 class="card-title">Goal: </h5><h5>{{goal}} Weight</h5></div>
            </div>
            <div class="card-body">
                <div class="card goalCard">
                    <h5 class="card-title">Fortnight Goal</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item goal" id="goal" data-goal="{{goal}}"><span><span id="fortnight-goal"></span><span> lb</span></span></div></li></li>
                    </ul>
                    <h5 class="card-title">Macros for today</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item goal"><div class="info"><span>Protein: </span><span><span id="protein-goal"></span><span> gr</span></span></div></li>
                        <li class="list-group-item goal"><div class="info"><span>Carbs: </span><span><span id="carbs-goal"></span><span> gr</span></span></div></li>
                        <li class="list-group-item goal"><div class="info"><span>Fat: </span><span><span id="fat-goal"></span><span></span>  gr</span></div></li>
                        <li class="list-group-item goal"><div class="info"><span>Total calories: </span><span><span id="total-calories-goal"></span></span></div></li>
                    </ul>
                </div>

            </div>
        </div>
    </section>
        <h2>Nutrition Plan</h2>
    <section id="nutritionPlan">
        <button type="button" class="btn btn-primary btn-lg" id="create-plan" data-id="{{id}}" data-name="{{first_name}}">Create a Nutrition Plan</button>
    </section>

    <div
    class="modal fade"
    id="exampleModal"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Client Info</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <form class="row g-3 needs-validation" id="update-client" data-id="{{id}}" novalidate>
            <div class="col-md-4">
              <label for="first-name" class="form-label">First name</label>
              <input
                type="text"
                class="form-control"
                id="first-name"
                value="{{first_name}}"
                required
              />
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <div class="col-md-4">
              <label for="last-name" class="form-label">Last name</label>
              <input
                type="text"
                class="form-control"
                id="last-name"
                value="{{last_name}}"

                required
              />
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <div class="col-md-4">
              <label for="weight" class="form-label">Weight</label>
              <input
                type="text"
                class="form-control"
                id="weight"
                value="{{weight}}"
                required
              />
              <div class="invalid-feedback">
                Please provide a valid Weight.
              </div>
            </div>
            <div class="col-md-4">
              <label for="height" class="form-label">Height</label>
              <input
                type="text"
                class="form-control"
                id="height"
                value="{{height}}"
                required
              />
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <div class="col-md-3">
              <label for="gender" class="form-label">Sex</label>
              <select
                class="form-select"
                id="gender"
                required
              >
                <option selected>{{sex}}</option>
                <option>{{oppositeSex sex}}</option>
              </select>
              <div class="invalid-feedback">
                Please select a valid Gender.
              </div>
            </div>
            <div class="col-md-3">
              <label for="newAge" class="form-label">Age</label>
              <input
                type="numbers"
                class="form-control"
                id="newAge"
                value="{{age}}"
                required
              />
              <div class="invalid-feedback">
                Please provide.
              </div>
            </div>
            <div class="col-md-4">
              <label for="newGoal" class="form-label">Goal</label>
              <select
                class="form-select"
                id="newGoal"
                value="{{goal}}"
                required
              >
                <option selected>{{goal}}</option>
                <option>{{newGoalA goal}}</option>
                <option>{{newGoalB goal}}</option>
              </select>
              <div class="invalid-feedback">
                Please select a valid Gender.
              </div>
            </div>
                        <div class="col-md-4">
              <label for="newActivity" class="form-label">Activity</label>
              <select
                class="form-select"
                id="newActivity"
                required
              >
                <option selected>{{activity}}</option>
                <option>{{newActivityA activity}}</option>
                <option>{{newActivityB activity}}</option>
                <option>{{newActivityC activity}}</option>
                <option>{{newActivityD activity}}</option>
              </select>
              <div class="invalid-feedback">
                Please select a valid Activity.
              </div>
            </div>
            <div class="col-12">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >Close</button>
              <button class="btn btn-primary" type="submit">Update Customer</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

</main>
